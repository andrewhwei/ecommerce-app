<h1>Add a new product!</h1>

<ul>
<% if @product && @product.errors.any? %>
  <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
</ul>


<%= form_tag '/products', method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div>
    <%= label_tag :in_stock %>
    <%= text_field_tag :in_stock, @product.in_stock %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>
  <div>
    <%= label_tag :link %>
    <%= text_field_tag :link%>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>
  <div>
    <%= label_tag "Supplier: " %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>

  <%= submit_tag "Add Product" %>

<% end %>

<a href="/products/">Back to all products</a>