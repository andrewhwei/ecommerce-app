<h1>Add a new product!</h1>

<%= form_tag '/products', method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :in_stock %>
    <%= text_field_tag :in_stock %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :link %>
    <%= text_field_tag :link %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag "Supplier: " %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>

  <%= submit_tag "Add Product" %>

<% end %>

<a href="/products/">Back to all products</a>