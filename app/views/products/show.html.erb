<h1><%= @product.name %></h1>

<div class="row">
    <div class="col-md-6">
      <div class="thumbnail thumbnail-show">
        <p><%= @product.name %></p>
        <p><%= @product.check_status %></p>
        <p>Price: $<%= @product.price %></p>
        <p>Tax: $<%= @product.tax %></p>
        <p>After tax: $<%= @product.total %></p>
        <p><%= @product.sale_message %></p>
        <p><img src= <%= @product.image %> class="img-responsive" alt= <%= @product.name %> width= 500px height= 500px></p>
        <p><%= @product.description %></p>
      </div>
    </div>
</div>

