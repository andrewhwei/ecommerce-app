<h1><%= @product.name %></h1>

<table class = "table table-striped">
  <th>Name</th>
  <th>Price</th>
  <th>Image</th>
  <th>Description</th>

  <tr>
    <td><%= @product.name %></td>
    <td><%= @product.price %></td>
    <td><img src= <%= @product.image %> class="img-responsive" alt= <%= @product.name %> width= 50px height= 50px></td>
    <td><%= @product.description %></td>
  </tr>

</table>