<h1>Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <a href="/products/<%= product.id %>">
          <p><%= product.name %></p>
          <p><%= product.price %></p>
          <p><img src= <%= product.image %> class="img-responsive" alt= <%= product.name %> width= 100px height= 100px></p>
          <p><%= product.description %></p>
        </a>
      </div>
    </div>
  <% end %>
</div>

